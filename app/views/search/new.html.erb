<%= page(:search) do %>
  <%= header do %>
    <h1>Sequencescape - Pulldown Pipeline</h1>
  <% end %>

  <%= content do %>
    <%= flash_messages %>

    <%= section do %>
      <h2>Search for Plates</h2>

      <%= form_tag perform_search_path, :method => 'post' do %>
        <p>
        <%= label_tag :user_id, "User ID" %>
        <%= text_field_tag :user_id, params[:user_id] %>
        </p>
        <p>
        <%= label_tag :plate_barcode, "Plate Barcode" %>
        <%= text_field_tag :plate_barcode, params[:plate_barcode] %>
        </p>

        <%= submit_tag "Search", :name => nil, :class => "submit" %>
      <% end %>
    <% end %>
    <% unless @ongoing.empty? %>
      <%= section do %>
        <h2>Ongoing plates</h2>
        <%= render(:partial => 'plate_progress', :locals => { :plates => @ongoing }) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>


<script type="text/javascript">
  $(function(){
    $("#user_id").bind("keydown", function(e) {
      var code=e.charCode || e.keyCode;
      if (code==13) {
        $("#plate_barcode").focus();
        return false;
      }
    });
  });
</script>

