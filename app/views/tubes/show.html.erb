<%= page(:summary) do %>
  <%= header do %>
    <h1>Tube: <%= @presenter.tube.barcode.ean13 %> - Summary</h1>
  <% end %>

  <%= content do %>
    <h2>Tube Status - <%= @presenter.tube.state.titleize %></h1>
    <div class="tube-view">
      <% unless @presenter.tube.aliquots.empty? -%>
        <%= render :partial => 'lab_ware/aliquot', :locals => { :lab_ware => @presenter.tube, :id => 'tube' } %>
      <% end -%>
    </div>

    <ul id="information">
      <li><span class="label">Barcode</span>             <%= useful_barcode(@presenter.tube.barcode) %></li>
      <li><span class="label">Current state</span>       <%= @presenter.tube.state %></li>
      <li><span class="label">Stock plate barcode</span> XXXXXXXXXX</li>
      <li><span class="label">Created on</span>          XX-XXXX-XXXX (by XXXXX)</li>
    </ul>
  <% end %>

  <%= footer %>
<% end %>

<%= page(:state) do %>
  <% header do %>
    <h1>Tube: <%= @presenter.tube.barcode.ean13 %> - State</h1>
  <% end %>

  <%= content do %>
    <%= state_change_form(@presenter) %>
  <% end %>

  <%= footer %>
<% end %>

<%= page(:printing) do %>
  <%= header do %>
    <h1>Tube: <%= @presenter.tube.barcode.ean13 %> - Printing</h1>
  <% end %>

  <%= content do %>
    <%= section do %>
      <%= link_to "Download Worksheet" %> - <%= button_to "Print Worksheet", {}, {:class => "submit"} %><br/>
    <% end %>
    <%= section do %>
      <%= individual_barcode_printing_form(
            @presenter.tube.barcode,
            :redirection_url => pulldown_multiplexed_library_tube_path(@presenter.tube),
            :text            => 'MX Library tube'
      ) %>
    <% end %>
  <% end %>

  <%= footer %>
<% end %>
