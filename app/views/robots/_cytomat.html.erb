<div class="ui-block-a">
  <ul class="robot cytomat">
    <% robot.beds.each do |bed_id, bed| %>
      <li class='bed-item' id="bed_<%= bed_id %>_list">
        <div data-role="fieldcontain" class="bed-container scan-plate">
          <label for="bed[<%= bed_id %>]" class="bed-label"><%= bed_id %></label>
          <input id="bed[<%= bed_id %>]" name="bed[<%= bed_id %>]" placeholder="<%= bed.label %>" class="bed" data-parent="<%= bed.parent %>" />
          <a href="#" data-role="button" data-icon="edit" data-iconpos="notext" data-theme="d" data-inline="true" class="bed-status-scan">Scan</a>
          <a href="#" data-role="button" data-icon="gear" data-iconpos="notext" data-theme="d" data-inline="true" class="bed-status-wait">Wait</a>
          <a href="#" data-role="button" data-icon="check" data-iconpos="notext" data-theme="b" data-inline="true" class="bed-status-good">Good</a>
          <a href="#" data-role="button" data-icon="alert" data-iconpos="notext" data-theme="a" data-inline="true" class="bed-status-bad">Bad</a>
        </div>
      </li>
    <% end %>
  </ul>
</div>
